<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../head.ejs") %>
</head>
<body>
    <%- include("../nav.ejs") %>
    <section>
        <div class="container">
            <div>
                <h4>Home</h4>
                <a href="/products/create">Add New User</a>
                <a href="/products/create">All User List</a>
            <div>
            <h2>User List:</h2>
            <table class="table">
                <thead>
                    <th></th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th></th>
                </thead>
                <tbody>
                    <% products.forEach(e=>{ %>
                        <tr>
                            <td>
                                <img width="80" src="data:<%= e.thumbnail.contentType %>;base64,<%= e.thumbnail.data %>" />                            </td>
                            <td><%= e._id %></td>
                            <td><%= e.firstName  %></td>
                            <td><%= e.lastName  %></td>
                            <td><%= e.mobile  %></td>
                            <td><%= e.username   %></td>
                            <td><%= e.password    %></td>
                            <td>
                                <a href="#" class="btn btn-outline-primary">Edit</a>
                            </td>
                        </tr>    
                   <% }) %>
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>